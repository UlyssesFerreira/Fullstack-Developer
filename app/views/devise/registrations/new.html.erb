<div class="user-form w-100 m-auto">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <h1 class="h3 mb-3 fw-normal">Sign Up</h1>
    <div class="form-floating">
      <%= f.text_field :full_name, autofocus: true, placeholder: "Full name", class: "form-control top-field" %>
      <%= f.label :full_name %>
    </div>

    <div class="form-floating">
      <%= f.email_field :email, placeholder: "name@example.com", autocomplete: "email", class: "form-control middle-field" %>
      <%= f.label :email %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, placeholder: "Password", autocomplete: "new-password", class: "form-control bottom-field" %>
      <%= f.label :password %>
    </div>

    <div class="mb-3">
      <%= f.label :avatar_image, "Upload your avatar image from file:", class: "formFileSm" %>
      <%= f.file_field :avatar_image, accept: "image/png,image/jpg,image/jpeg", class: "form-control form-control-sm" %>
    </div>
    <%= f.label :avatar_url, "Or provide an image URL:" %>
    <%= f.text_field :avatar_url, placeholder: "https://example.com/avatar.jpg", class: "form-control form-control-sm" %>

    <%= f.submit "Sign Up", class: "btn btn-primary w-100 py-2 mt-5" %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
