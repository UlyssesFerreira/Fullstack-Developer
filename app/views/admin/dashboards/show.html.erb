<div class="container">
  <h1 class="h3 mt-5 mb-4">Admin Dashboard</h1>
</div>
<div class="container mb-5">
  <%= render "counters" %>

  <div class="card">
    <div class="card-header py-3 bg-white">
      <h5 class="mb-0">Lista de Usu√°rios</h5>
    </div>
    <div class="card-body p-0">
      <div class="table-responsive">
        <table class="table table-hover align-middle mb-0">
          <thead class="table-light">
            <tr>
              <th>Full name</th>
              <th>E-mail</th>
              <th>Role</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @users.each do |user| %>
              <tr>
                <td class="fw-semibold"><%= user.full_name %></td>
                <td><%= user.email %></td>
                <td><span class="badge bg-secondary"><%= user.role.humanize %></span></td>
                <td class="text-end">
                  <a href="<%= edit_admin_user_path(user) %>" class="btn btn-outline-dark btn-sm">Show user</a>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
