<div class="d-flex" style="min-height: 100vh;">
  <div class="container mt-5">
    <h1 class="text-primary">Admin Dashboard</h1>

    <%= turbo_stream_from "users" %>
    <div id="user_counters">
      <%= render "counters" %>
    </div>

    <table class="table mt-5">
      <thead>
        <tr>
          <th scope="col">Full name</th>
          <th scope="col">E-mail</th>
          <th scope="col">Role</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.full_name %></td>
            <td><%= user.email %></td>
            <td><span class="badge text-bg-secondary"><%= user.role.humanize %></span></td>
            <td>
            <a class="icon-link icon-link-hover text-decoration-none" href="<%= edit_admin_user_path(user) %>">
              Show user
              <svg xmlns="http://www.w3.org/2000/svg" class="bi" viewBox="0 0 16 16" aria-hidden="true">
                <path d="M1 8a.5.5 0 0 1 .5-.5h11.793l-3.147-3.146a.5.5 0 0 1 .708-.708l4 4a.5.5 0 0 1 0 .708l-4 4a.5.5 0 0 1-.708-.708L13.293 8.5H1.5A.5.5 0 0 1 1 8z"/>
              </svg>
            </a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
